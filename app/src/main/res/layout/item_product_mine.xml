<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#9e000000"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/product_name"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5"
                android:layout_marginBottom="10dp"
                android:rating="3.5"
                android:progressBackgroundTint="#cccccc"
                android:theme="@style/Yellow_Rating_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:text="حذف"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:id="@+id/delete_product"
                    android:drawableStart="@drawable/ic_delete"
                    android:drawableTint="@android:color/holo_red_light"
                    android:textColor="@android:color/holo_red_light"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:text="تعديل"
                    android:textColor="@android:color/holo_red_light"
                    android:padding="5dp"
                    android:id="@+id/edit_product"
                    android:drawableStart="@drawable/ic_edit_black_24dp_edit"
                    android:drawableTint="@android:color/holo_red_light"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>